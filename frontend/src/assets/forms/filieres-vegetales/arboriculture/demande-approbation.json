{
  "title": "Demande d'Approbation Préalable - Arboriculture Fruitière",
  "description": "Informations pour l'approbation de plantation d'arbres fruitiers",
  "fields": [
    {
      "name": "espece_fruitiere",
      "label": "Espèce fruitière",
      "type": "select",
      "required": true,
      "options": [
        { "value": "olivier", "label": "Olivier" },
        { "value": "agrumes", "label": "Agrumes (oranges, citrons...)" },
        { "value": "amandier", "label": "Amandier" },
        { "value": "figuier", "label": "Figuier" },
        { "value": "grenadier", "label": "Grenadier" },
        { "value": "pecher", "label": "Pêcher" },
        { "value": "abricotier", "label": "Abricotier" },
        { "value": "autre", "label": "Autre espèce" }
      ]
    },
    {
      "name": "variete",
      "label": "Variété",
      "type": "text",
      "required": true,
      "placeholder": "Ex: Picholine marocaine, Valencia...",
      "help": "Précisez la variété exacte choisie"
    },
    {
      "name": "porte_greffe",
      "label": "Porte-greffe",
      "type": "text",
      "placeholder": "Si applicable",
      "help": "Type de porte-greffe utilisé (pour les arbres greffés)"
    },
    {
      "name": "nombre_plants",
      "label": "Nombre de plants",
      "type": "number",
      "required": true,
      "min": 10,
      "placeholder": "Ex: 500",
      "help": "Nombre total d'arbres à planter"
    },
    {
      "name": "age_plants",
      "label": "Âge des plants (années)",
      "type": "number",
      "min": 1,
      "max": 5,
      "placeholder": "Ex: 2",
      "help": "Âge des plants au moment de la plantation"
    },
    {
      "name": "origine_plants",
      "label": "Origine des plants",
      "type": "select",
      "required": true,
      "options": [
        { "value": "pepiniere_agreee", "label": "Pépinière agréée nationale" },
        { "value": "pepiniere_locale", "label": "Pépinière locale" },
        { "value": "importation", "label": "Importation" },
        { "value": "production_propre", "label": "Production propre" }
      ]
    },
    {
      "name": "certification_plants",
      "label": "Certification des plants",
      "type": "checkbox",
      "checkboxLabel": "Plants certifiés ou contrôlés",
      "help": "Certification sanitaire et variétale des plants"
    }
  ]
}